<h1>Books list</h1>
<table>
  <thead>
    <tr>
      <th>name</th>
      <th>pages</th>
      <th>cost</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td><%= book.pages %></td>
      <td><%= book.cost %></td>
      <td><%= link_to 'Edit',edit_book_path(book) %></td>
      <td><%= link_to 'Show',book_path(book) %></td>
      <td><%= link_to 'Delete',book_path(book),method: :delete,data: {confirm:"Are you sure?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<p>
  <%= link_to 'Create new  author',new_book_path %>
</p>
