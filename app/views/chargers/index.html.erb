<h1>Chargers list</h1>
<table>
  <thead>
    <tr>
      <th>name</th>
      <th>cost</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @chargers.each do |charger| %>
    <tr>
      <td><%= charger.name %></td>
      <td><%= charger.cost %></td>
      <td><%= link_to 'Edit',edit_charger_path(charger) %></td>
      <td><%= link_to 'Show',charger_path(charger) %></td>
      <td><%= link_to 'Delete',charger_path(charger),method: :delete,data: {confirm:"Are you sure?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<p>
  <%= link_to 'Create new  charger',new_charger_path %>
</p>
