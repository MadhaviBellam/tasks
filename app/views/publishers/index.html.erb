<h1>Publishers listing pages</h1>
<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @publishers.each do |publisher| %>
    <tr>
      <td><%= publisher.firstname %></td>
      <td><%= publisher.lastname %></td>
      <td><%= link_to 'Edit',edit_publisher_path(publisher) %></td>
      <td><%= link_to 'Show',publisher_path(publisher) %></td>
      <td><%= link_to 'Delete',publisher_path(publisher),method: :delete,data:{confirm:"Are you sure?"} %> </td>
    </tr>
    <% end %>
  </tbody>
</table>
<p>
  <%= link_to 'Create new publisher',new_publisher_path %>
</p>
