<h1>Authors list</h1>
<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Age</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
    <tr>
      <td><%= author.firstname %></td>
      <td><%= author.lastname %></td>
      <td><%= author.age %></td>
      <td><%= link_to 'Edit',edit_author_path(author) %></td>
      <td><%= link_to 'Show',author_path(author) %></td>
      <td><%= link_to 'Delete',author_path(author),method: :delete,data: {confirm:"Are you sure?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<p>
  <%= link_to 'Create new  author',new_author_path %>
</p>
