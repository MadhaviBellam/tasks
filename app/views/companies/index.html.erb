<h1>Companies list</h1>
<table>
  <thead>
    <tr>
      <th>name</th>
      <th>place</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%= company.place %></td>
      <td><%= link_to 'Edit',edit_company_path(company) %></td>
      <td><%= link_to 'Show',company_path(company) %></td>
      <td><%= link_to 'Delete',company_path(company),method: :delete,data: {confirm:"Are you sure?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<p>
  <%= link_to 'Create new company',new_company_path %>
</p>
